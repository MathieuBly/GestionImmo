{% extends 'base.html.twig' %}

{% block title %}Gestion des Biens Immobiliers
{% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('theme/assets/css/style.css') }}">
{% endblock %}

{% block body %}
	{% include './header.html.twig' %}
	<div class="container mt-5">
		<div class="box mx-auto p-4 rounded shadow">
			<h1 class="title text-center mb-4">Gestion des Biens Immobiliers</h1>

			<div class="search text-center mb-4">
				<form method="GET" action="{{ path('app_property_index') }}" class="d-flex justify-center">
					<input type="text" name="search" class="input rounded-pill me-2" placeholder="üîç Rechercher un bien par titre..." value="{{ search ?? '' }}" style="max-width:300px;">
					<button type="submit" class="btn btn-primary rounded-pill me-2">Rechercher</button>

					{% if search is not empty %}
						<a href="{{ path('app_property_index') }}" class="btn btn-secondary rounded-pill">‚¨ÖÔ∏è Retour</a>
					{% endif %}
				</form>
			</div>

			<div class="table-responsive">
				<table class="table table-bordered text-center">
					<thead class="table-dark">
						<tr>
							<th>Id</th>
							<th>Image</th>
							<th>Titre</th>
							<th>Description</th>
							<th>Prix</th>
							<th>Type</th>
							<th>Actions</th>
						</tr>
					</thead>
					<tbody>
						{% for property in properties %}
							<tr>
								<td>{{ property.id }}</td>
								<td><img src="{{ asset('theme/assets/image/' ~ property.image) }}" alt="Image du bien" width="50">
								</td>
								<td>{{ property.title }}</td>
								<td>{{ property.description|length > 50 ? property.description|slice(0, 50) ~ '...' : property.description }}</td>
								<td>
									<strong>{{ property.price }}
										‚Ç¨</strong>
								</td>
								<td>{{ property.type }}</td>
								<td>
									<a href="{{ path('app_property_show', {'id': property.id}) }}" class="btn btn-primary btn-sm">üëÅ Voir</a>
									{% if is_granted('ROLE_USER_ADMIN') %}
										<a href="{{ path('app_property_edit', {'id': property.id}) }}" class="btn btn-warning btn-sm">‚úèÔ∏è Modifier</a>
									{% endif %}
								</td>
							</tr>
						{% else %}
							<tr>
								<td colspan="7" class="text-danger">Aucun bien trouv√©.</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>

			<div class="text-center mt-4">
				<a href="{{ path('app_property_new') }}" class="btn btn-success rounded-pill">
					Ajouter un bien</a>
			</div>
		</div>
	</div>
	{% include './footer.html.twig' %}
{% endblock %}
