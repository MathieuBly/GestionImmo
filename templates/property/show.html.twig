{% extends 'base.html.twig' %}

{% block title %}Détail du Bien
{% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('theme/assets/css/style.css') }}">
{% endblock %}

{% block body %}
	{% include './header.html.twig' %}
	<div class="container">
		<div class="box mx-auto p-4">
			<h1 class="title text-center mb-4">Détail du Bien Immobilier</h1>

			<table class="table table-bordered">
				<tbody>
					<tr>
						<th>ID</th>
						<td>{{ property.id }}</td>
					</tr>
					<tr>
						<th>Titre</th>
						<td>{{ property.title }}</td>
					</tr>
					<tr>
						<th>Description</th>
						<td>{{ property.description }}</td>
					</tr>
					<tr>
						<th>Prix</th>
						<td>{{ property.price }}
							€</td>
					</tr>
					<tr>
						<th>Image</th>
						<td>
							<img src="{{ asset('theme/assets/image/' ~ property.image) }}" alt="Image du bien" width="200">

						</td>
					</tr>
					<tr>
						<th>Type</th>
						<td>{{ property.type }}</td>
					</tr>
				</tbody>
			</table>

			<div class="text-center mt-4 d-flex justify-content-center gap-2">
				<form method="get" action="{{ path('app_property_index') }}" style="display: inline;">
					<button type="submit" class="btn btn-secondary">Retour à la liste</button>
				</form>
				
				<form method="get" action="{{ path('app_property_edit', {'id': property.id}) }}" style="display: inline;">
					<button type="submit" class="btn btn-warning">Modifier</button>
				</form>

				{{ include('property/_delete_form.html.twig') }}
			</div>

		</div>
	</div>
	{% include './footer.html.twig' %}
{% endblock %}
