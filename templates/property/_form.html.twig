{{ form_start(form, {'attr': {'enctype': 'multipart/form-data'}}) }}

<div class="form-group mb-3">
    {{ form_label(form.title) }}
    {{ form_widget(form.title, {'attr': {'class': 'form-control custom-input'}}) }}
    {{ form_errors(form.title) }}
</div>

<div class="form-group mb-3 description-group">
    {{ form_label(form.description) }}
    {{ form_widget(form.description, {
        'attr': {
            'class': 'form-control description-input',
            'rows': '1'
        }
    }) }}
    {{ form_errors(form.description) }}
</div>

<div class="form-group mb-3">
    {{ form_label(form.price) }}
    {{ form_widget(form.price, {'attr': {'class': 'form-control custom-input'}}) }}
    {{ form_errors(form.price) }}
</div>

<div class="form-group mb-3">
    {{ form_label(form.image) }}
    {{ form_widget(form.image, {'attr': {'class': 'form-control custom-input'}}) }}
    {{ form_errors(form.image) }}
</div>

<div class="form-group mb-3">
    {{ form_label(form.type) }}
    {{ form_widget(form.type, {'attr': {'class': 'form-control custom-input'}}) }}
    {{ form_errors(form.type) }}
</div>

<button type="submit" class="btn btn-warning btn-sm" onclick="return confirm('Voulez-vous vraiment modifier ce bien ?');">
    <i class="bi bi-pencil-square me-1"></i> Editer
</button>

{{ form_end(form) }}
